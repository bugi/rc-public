{
    "title": "ctrl+key -> cmd+key in chrome",
    "rules": [

        {
	    "description": "ctrl+t -> cmd+t in chrome",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "t",
			"modifiers": {
				"mandatory": [
					"control"
				],
				"optional": [ "shift" ]
			}
                    },
                    "to": [
                        {
                            "key_code": "t",
                            "modifiers": [
				    "left_command"
				    ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "com.google.Chrome"
                            ]
                        }
                    ]
                }
            ]
        }

