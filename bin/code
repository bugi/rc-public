#!/usr/bin/env bash
# vim: set tabstop=2 softtabstop=2 shiftwidth=2 expandtab autoindent copyindent :

# Make working with vscodium and zed have the same(ish) cli as vscode.

umm ()
{ # Hopefully returns the LAST entry from PATH for $xname + true.
  # If the return string would be the same as $not_this, returns false.
  # $not_this should be the full path of this wrapper script.
  local xname="$1" ; shift
  local not_this="$1" ; shift
  local exe=()
  if [[ -z $not_this ]]
  then
    false
    return
  fi
  not_this="$(readlink -f "$not_this")"
  read -r -d'\n' -a exe < <(type -apf "$xname" )
  for EXE in "${exe[@]}"
  do
    if [[ -n $EXE ]]
    then
      EXE="$(readlink -f "$EXE")"
    else
      continue
    fi
    if [[ $not_this != $EXE ]]
    then
      echo "$EXE"
      true
      return
    fi
  done
  false
  return
}

me="$(readlink -f "$0")"

for coder in ${CODE_preference} zed code codium
do
  if exe="$( umm "$coder" "$me" )"
  then
    if [[ $1 == =which ]]
    then
      case "$coder" in
        (zed) $coder =which ;;
        (*) echo "$exe" ;;
      esac
      exit
    else
      exec "$exe" "$@"
    fi
  fi
done

echo "None of Zed (brew install zed | https://zed.dev/ | flatpak install dev.zed.Zed)  OR  VSCodium (brew install vscodium | https://github.com/VSCodium/vscodium)  OR  Microsoft Visual Studio Code (brew install visual-studio-code | https://code.visualstudio.com/) is installed." 1>&2
exit 1
